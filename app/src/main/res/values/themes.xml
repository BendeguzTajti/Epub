<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Epub" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/white_800</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="actionBarSize">@dimen/toolbar_size</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView.ActionBar">
        <!--search view customization-->
        <item name="layout">@layout/abc_search_view</item>
        <item name="closeIcon">@drawable/abc_ic_clear_material</item>
    </style>

    <style name="PageLoadingStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/purple_500</item>
    </style>

    <style name="VideoLoadingStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/white</item>
    </style>
    
    <style name="Theme.Fullscreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>