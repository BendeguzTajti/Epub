<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Epub" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/white_800</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="actionBarSize">50dp</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView.ActionBar">
        <!--search view customization-->
        <item name="layout">@layout/abc_search_view</item>
        <item name="closeIcon">@drawable/abc_ic_clear_material</item>
    </style>
</resources>