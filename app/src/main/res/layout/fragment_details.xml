<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">

    <include layout="@layout/main_app_bar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/category_streams_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingStart="@dimen/recycler_view_padding_side"
        android:paddingTop="@dimen/category_streams_recycler_view_padding_top"
        android:paddingEnd="@dimen/recycler_view_padding_side"
        android:paddingBottom="@dimen/category_streams_recycler_view_padding_bottom"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:itemCount="4"
        tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:listitem="@layout/category_stream_item"
        tools:spanCount="1"
        tools:visibility="visible" />

    <ProgressBar
        android:id="@+id/details_page_loading"
        style="@style/PageLoadingStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>